.container
  %h2 Chuck Norris

  = form_tag({:controller => "facts", :action => "search"}, :remote => true, class: 'form-inline')
  .form-group
    = text_field_tag :text, "", class: 'search form-control', placeholder: t('search')
  .form-group
    = text_field_tag :email, "", class: 'search form-control', placeholder: t('email')
  .form-group
    = select_tag 'category', options_for_select(@categories), :include_blank => t('categories'), class: 'form-control'
  .form-group
    = submit_tag t('submit'), class: 'btn btn-primary'

  .container
    .facts